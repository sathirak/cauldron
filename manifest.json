{
    "manifest_version": 3,
    "name": "Cauldron",
    "version": "1.1",
    "description": "Gather links, text snippets, code snippets, and images effortlessly in Cauldron.",
    "permissions": ["storage", "tabs", "activeTab", "contextMenus"],
    "action": {
      "default_popup": "cargo-popup.html",
      "default_icon": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
      }
    },
    "icons": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "background": {
      "service_worker": "background.js"
    },
    "web_accessible_resources": [
      {
        "resources": ["cargo-saved.html"],
        "matches": ["<all_urls>"]
      }
    ]
  }
  